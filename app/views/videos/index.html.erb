<% if current_user == nil %>
    <%= link_to 'ログイン', controller: :top,action: :login_form %>
<% else %>
    <h1><%= current_user.uid %>さんようこそ</h1>
    <%= link_to 'ログアウト', controller: :top,action: :logout %>
<% end %>

<h1>動画一覧</h1>
<br><%= link_to '動画投稿', controller: :videos,action: :new %>

<% @videos.each do |e| %>

    <p>
        <%= e.title %><br>
        <%= e.introduction %><br>
        <%= link_to "再生", video_path(e) %><br>
        <%= @like_count %>
        <%= link_to 'いいね', likes_path(video_id: e.id), data: {turbo_method: :post} %>
        <%= link_to 'いいね削除', likes_destroy_path(e), method: :delete %>
    </p>
<% end %>

