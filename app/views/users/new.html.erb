<head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag "application" %>
</head>
<body>

    <h1>新規ユーザー登録</h1>

    
    <%= form_for @user , url: {action: :create} do |f| %>
        <a>
         <table>
            <tr>
                <td><%= f.label :uid, 'ユーザID' %></td>
                <td><%= f.text_field :uid %></td>
            </tr>
            <tr>
                <td><%= f.label :password, 'パスワード' %></td>
                <td><%= f.password_field :password %></td>
            </tr>
            <tr>
                <td><%= f.label :password_confirmation, 'パスワード(確認)' %></td>
                <td><%= f.password_field :password_confirmation %></td>
            </tr>
        </table>
        <br>
        <%= f.submit '登録する' %>
        </a>
    <% end %>
    <br><%= button_to 'ユーザー一覧', {controller: :users,action: :index}, method: :get %>
    <br><%= button_to 'ログインへ', {controller: :top, action: :login_form}, method: :get %>
</body>