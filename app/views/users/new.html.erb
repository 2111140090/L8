<h1>ユーザー登録</h1>

<%= form_for @users , url: {action: :create} do |f| %>
    <%= f.label :uid, 'ID：' %>
    <%= f.text_field :uid %>
    <p>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation, 'パスワード(再入力)' %>
        <%= f.password_field :password_confirmation %>
    </p>
    <%= f.submit '登録' %>
<% end %>

<br><%= link_to 'ログインはこちら', controller: :top,action: :login %>